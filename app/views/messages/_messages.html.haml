.message{data: {message: {id: messages.id}}}
  .upper-message
    .upper-message__user-name
      = messages.user.name
    .upper-message__date
      = messages.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-meesage
    .lower-message__content
      - if messages.content.present?
        %p.lower-message__content
          = messages.content
      = image_tag messages.image.url, class: 'lower-message__image' if messages.image.present?